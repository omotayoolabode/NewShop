@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Shop>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "MasterPage.cshtml";
    var allproducts = (IEnumerable<Product>)ViewBag.allproducts;
    var currentpageurl = ViewBag.currentpageurl;
}

 <section class="shop_grid_area sec_pad">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-6 col-sm-5">
                        <div class="shop_menu_left">
                            <p>Showing 1–14 of @allproducts.Count() results</p>
                        </div>
                    </div>
                    <div class="col-lg-6 col-sm-7">
                        
                    </div>
                </div>
            <div class="row">
            @{
                foreach (var item in allproducts)
                {
                    <div class="col-lg-3 col-sm-4">
                        <div class="single_product_item">
                            <div class="product_img">
                                <img class="img-fluid" src="@item.Images.FirstOrDefault().Url()" alt="">
                                <div class="hover_content">
                                    <a href="product-details-1.html" title="Add to Wishlist"><i class="ti-heart"></i></a>
                                    <a href="product-details-1.html" title="Add to cart"><i class="ti-bag"></i></a>
                                    <a data-toggle="modal" data-target=".product_compair_modal" aria-label="Quickview"
                                       href="@item.Url()" target="_blank" rel="nofollow">
                                        <i class="ti-eye"></i>
                                    </a>
                                </div>
                            </div>
                            <div class="single_pr_details">
                                <a href="@item.Url()">
                                    <h3 class="f_p f_500 f_size_16">@item.ProductTitle</h3>
                                </a>
                                <div class="price">
                                    <del>
                                        <span class="woocommerce-Price-amount amount"></span>
                                    </del>
                                    <ins>
                                        <span class="woocommerce-Price-amount amount">
                                            <span
                                                class="woocommerce-Price-currencySymbol">₦</span>@item.ProductPrice</span></ins>
                                </div>
                              
                            </div>
                        </div>
                    </div>
                }
            }
           
        
            <div class="hr"></div>
            <div class="col-lg-12">
                <ul class="list-unstyled page-numbers shop_page_number">
                    <li><span aria-current="page" class="page-numbers current">1</span></li>
                    <li><a class="page-numbers" href="product-details-1.html">2</a></li>
                    <li>
                        <a class="next page-numbers" href="product-details-1.html">
                            <i
                                class="ti-arrow-right"></i></a></li>
                </ul>
            </div>
            </div>
            </div>
        </section>